<%= form_for @server, :html => { :class => 'form-inline form-bordered form-condensed' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Server</legend>

    <div class="control-group">
      <%= f.label :server_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :server_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :server_ip, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :server_ip, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :server_key, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :server_key, :class => 'text_area', :rows => 8 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', servers_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
