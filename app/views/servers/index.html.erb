<h1>Servers</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>  
      <th>ID</th>
      <th>Server name</th>
      <th>Server ip</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.id %></td>
        <td><%= link_to server.server_name, server_path(server) %></td>
        <td><%= link_to server.server_ip, server_path(server) %></td>
        <td><%= server.created_at.strftime("%d-%m-%Y") if server.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_server_path(server), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', server_path(server), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_server_path, :class => 'btn btn-primary' %>
<div class="pagination">
 <%= will_paginate @servers %>
</div>
